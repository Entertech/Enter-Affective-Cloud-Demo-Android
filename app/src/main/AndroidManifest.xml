<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="cn.entertech.affectiveclouddemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <dist:module dist:instant="true" />
    <application
        android:name="cn.entertech.affectiveclouddemo.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="cn.entertech.affectiveclouddemo.ui.activity.DataActivity"/>
        <activity android:name="cn.entertech.affectiveclouddemo.ui.activity.MeditationActivity"
            android:configChanges="screenSize|orientation"></activity>
        <activity android:name="cn.entertech.affectiveclouddemo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ReportDetailBrainwaveSpectrumActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.activity.ReportDetailHRActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.activity.ReportDetailHRVActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.activity.ReportDetailRelaxationAndAttentionActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.activity.ReportDetailPressureActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>