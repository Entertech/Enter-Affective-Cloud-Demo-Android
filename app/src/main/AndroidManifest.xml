        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity android:name="cn.entertech.flowtimezh.ui.activity.RecordHistoryActivity"></activity>
        <activity android:name="cn.entertech.flowtimezh.ui.activity.DataActivity" />
        <activity android:name="cn.entertech.flowtimezh.MainActivity"
            android:configChanges="orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailBrainwaveSpectrumActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailHRActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailHRVActivity"
