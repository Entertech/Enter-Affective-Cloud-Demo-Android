        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailRelaxationAndAttentionActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailPressureActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.SensorContactCheckActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.DeviceStatusActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name="cn.entertech.flowtimezh.ui.activity.ReportDetailCoherenceActivity"
            android:configChanges="orientation|screenSize" />

        <activity android:name="cn.entertech.flowtimezh.ui.activity.UnguidePreSettingsActivity"/>
        <activity android:name="cn.entertech.flowtimezh.ui.activity.MeditationWithoutGuideActivity"/>
        <activity android:name="cn.entertech.flowtimezh.ui.activity.MeditationTimeSettingActivity"/>
        <activity android:name="cn.entertech.flowtimezh.ui.activity.DeviceTurnOnActivity"/>
