    <declare-styleable name="DeviceContactTipView">
        <attr name="dctv_title" format="string" />
        <attr name="dctv_image" format="reference" />
        <attr name="dctv_tip" format="string" />
    </declare-styleable>
    <declare-styleable name="ScrollLayout">
        <attr name="minOffset" format="dimension"/>
        <attr name="maxOffset" format="dimension"/>
        <attr name="exitOffset" format="dimension"/>
        <attr name="mode">
            <flag name="open" value="0x0"/>
            <flag name="close" value="0x1"/>
            <flag name="exit" value="0x2"/>
        </attr>
        <attr name="isChildListView" format="boolean"/>
        <attr name="allowHorizontalScroll" format="boolean"/>
        <attr name="isSupportExit" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="ChartCardView">
        <attr name="cc_titleIcon"    format="reference"/>
        <attr name="cc_titleText"    format="string"/>
        <attr name="cc_titleTextColor"    format="color"/>
        <attr name="cc_menuText"   format="string"/>
        <attr name="cc_menuTextColor"   format="color"/>
        <attr name="cc_cornerRadius"   format="dimension"/>
    </declare-styleable>

    <declare-styleable name="NapProgressView">
        <attr name="npv_label"    format="string"/>
        <attr name="npv_unit"    format="string"/>
        <attr name="npv_foregroundColor"    format="color"/>
        <attr name="npv_backgroundColor"   format="color"/>
        <attr name="npv_value"   format="integer"/>
        <attr name="npv_maxValue"   format="integer"/>
    </declare-styleable>


    <declare-styleable name="CommonButton">
        <attr name="cb_btnText" format="string" />
        <attr name="cb_btnTextColor" format="color" />
        <attr name="cb_btnIcon" format="reference" />
        <attr name="cb_btnSizeMode">
            <enum name="large" value="0" />
            <enum name="small" value="1" />
        </attr>
        <attr name="cb_btnEnable" format="boolean" />
        <attr name="cb_btnStrokeColor" format="color" />
        <attr name="cb_btnFillColor" format="color" />
        <attr name="cb_btnDisableColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DeviceTypeView">
        <attr name="dtv_name" format="string" />
        <attr name="dtv_tip" format="string" />
    </declare-styleable>


    <declare-styleable name="CommonTextItem">
        <attr name="cti_icon" format="reference" />
        <attr name="cti_text" format="string" />
        <attr name="cti_textColor" format="color" />
        <attr name="cti_textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <attr name="cti_subText" format="string" />
        <attr name="cti_showNewFlag" format="boolean" />
        <attr name="cti_arrowIcon" format="reference" />
    </declare-styleable>
