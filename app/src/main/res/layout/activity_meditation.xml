<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true">

    <include layout="@layout/layout_common_title" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<cn.entertech.flowtime.ui.view.MeditationStatisticsScrollView-->
        <!--android:id="@+id/mssv_meditation_viiew"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--&gt;-->

        <!--</cn.entertech.flowtime.ui.view.MeditationStatisticsScrollView>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_meditation" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="收集数据标签"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="根据提示进行数据的标签收集工作"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_start_record"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_next_btn_bg"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone">

        </RelativeLayout>

        <cn.entertech.flowtimezh.ui.view.scrolllayout.ScrollLayout
            android:id="@+id/sl_statistics_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#00ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:translationZ="10dp"
            android:visibility="gone"
            app:isChildListView="false"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_scroll_layout_bg">

                <TextView
                    android:id="@+id/tv_drag_bar"
                    android:layout_width="56dp"
                    android:layout_height="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/shape_drag_bar_bg" />

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_drag_bar"
                    android:layout_marginTop="@dimen/activity_margin">

                </FrameLayout>
            </RelativeLayout>

        </cn.entertech.flowtimezh.ui.view.scrolllayout.ScrollLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <cn.entertech.flowtime.ui.view.MeditationExitView-->
    <!--        android:id="@+id/exit_view"-->
    <!--        android:visibility="gone"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:translationZ="11dp"-->
    <!--        >-->

    <!--    </cn.entertech.flowtime.ui.view.MeditationExitView>-->


</RelativeLayout>