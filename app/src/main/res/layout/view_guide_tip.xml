<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/shape_guide_tip_bg"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_tip_context"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_toLeftOf="@+id/rv_close_tip"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:textColor="?attr/common_red2_color"
            android:textSize="14sp"
            android:text="It's easy for you to continue the last journey. Tap the card to learn the next lesson."/>

    <RelativeLayout
            android:clickable="true"
            android:id="@+id/rv_close_tip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
                android:layout_marginRight="@dimen/activity_margin_half"
                android:layout_marginTop="4dp"
                android:id="@+id/iv_close_tip"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_close_tip"/>
    </RelativeLayout>

</RelativeLayout>