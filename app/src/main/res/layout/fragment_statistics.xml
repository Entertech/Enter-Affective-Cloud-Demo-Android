<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
            android:id="@+id/rl_segment_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/common_bg_z1_color"
            >

        <ImageView
                android:id="@+id/iv_record_history"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_margin"
                android:src="@drawable/vector_drawable_record_history_icon"
                />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_title_journey"
                    android:textSize="19sp"
                    android:textColor="@color/colorThemeBlue"
                    android:text="@string/report_title_journal"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_title_statistics"
                    android:text="@string/report_title_statistics"
                    android:textSize="16sp"
                    android:textColor="@color/colorUnselectedText"
                    android:layout_marginLeft="@dimen/margin_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.flyco.tablayout.SlidingTabLayout
                android:visibility="gone"
                android:id="@+id/st_statistics"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginBottom="@dimen/activity_margin_half"
                app:tl_textSelectColor="@color/colorThemeBlue"
                app:tl_textUnselectColor="@color/colorUnselectedText"
                >

        </com.flyco.tablayout.SlidingTabLayout>

        <ImageView
                android:id="@+id/iv_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_margin"
                android:src="@drawable/vector_drawable_share"
                />
    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
<!--    <FrameLayout-->
<!--            android:id="@+id/data_content"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            />-->

</LinearLayout>
