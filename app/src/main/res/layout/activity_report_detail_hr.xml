<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        >

    <include layout="@layout/layout_common_title" />

    <androidx.core.widget.NestedScrollView
            android:background="?attr/common_bg2_color"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <cn.entertech.uicomponentsdk.report.ReportLineChartCard
                    android:id="@+id/chart_hr"
                    android:layout_width="match_parent"
                    android:layout_height="262dp"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:background="@color/white"
                    app:rlcc_isTitleMenuIconShow="true"
                    app:rlcc_background="?attr/common_bg_z1_color"
                    app:rlcc_lineColor="#FF6682"
                    app:rlcc_lineWidth="0.75dp"
                    app:rlcc_gridLineColor="?attr/common_line_light_color"
                    app:rlcc_textColor="?attr/common_text_lv1_base_color"
                    app:rlcc_xAxisUnit="Time(min)"
                    app:rlcc_pointCount="100"
                    app:rlcc_timeUnit="400"
                    app:rlcc_averageLabelBgColor="?attr/common_bg1_color"
                    app:rlcc_markViewTitle="Heart rate"
                    app:rlcc_markViewTitleColor="?attr/common_text_lv2_base_color"
                    app:rlcc_markViewValueColor="?attr/common_text_lv1_base_color"
                    app:rlcc_highlightLineWidth="2"
                    app:rlcc_markViewBgColor="?attr/common_bg_z2_color"
                    app:rlcc_highlightLineColor="?attr/common_line_light_color"
                    app:rlcc_title="Changes During Meditation"
                    app:rlcc_titleMenuIcon="@drawable/vector_drawable_full_screen"
                    />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    app:cardCornerRadius="@dimen/activity_margin_half"
                    >

                <cn.entertech.uicomponentsdk.report.ReportAverageChartCard
                        android:id="@+id/average_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:racc_textColor="?attr/common_text_lv2_base_color"
                        app:racc_mainColor="?attr/common_text_lv1_base_color"
                        app:racc_background="?attr/common_bg_z1_color"
                        app:racc_barColor="?attr/common_line_light_color"
                        app:racc_barHighLightColor="?attr/common_red_primary_color"
                        app:racc_barValueBgColor="?attr/common_red5_color"
                        app:racc_isTitleMenuIconShow="true"
                        app:racc_tag="Heart rate"
                        app:racc_title="Last 7 times"
                        app:racc_unit="bpm"
                        app:racc_isMenuIconInfo="true"
                        app:racc_infoUrl="https://www.notion.so/Last-7-Times-15a5331f15a3438ca1abdcbf2b0ff331"
                        app:racc_titleIcon="@drawable/vector_drawable_last_average_title_icon_hr"
                        app:racc_titleMenuIcon="@drawable/vector_drawable_info_circle"
                        />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    app:cardCornerRadius="@dimen/activity_margin_half"
                    >

                <cn.entertech.flowtimezh.ui.view.ReportAboutView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/common_bg_z1_color"
                        app:rav_textColor="?attr/common_text_lv1_base_color"
                        app:rav_buttonTextColor="?attr/common_btn_1"
                        app:rav_learnMoreUrl="https://www.notion.so/Heart-Rate-Graph-fa83da8528694fd1a265882db31d3778"
                        app:rav_contentText="@string/about_hr"
                        app:rav_titleIcon="@drawable/vector_drawable_report_about_hr"
                        />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>
