<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/lineColor" />

    <ImageView
        android:id="@+id/iv_icon_is_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_margin"
        android:src="@mipmap/ic_check_blue"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_experiment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_toRightOf="@+id/iv_icon_is_selected"
        android:text="脑电波选中国香"
        android:textColor="@color/colorBlack" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_icon_to_labels"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_margin"
        android:src="@mipmap/ic_info_blue" />

</RelativeLayout>
