<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/common_bg1_color"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/pic_meditation_model"
            android:scaleType="centerCrop"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/pic_meditation_model_cover"
            android:scaleType="fitXY"/>
    <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="@dimen/activity_margin_half"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin_half"
                        android:background="?attr/common_yellow5_color"
                        >

                    <ImageView
                            android:layout_width="276dp"
                            android:layout_height="99dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/pic_flowtime"
                            />
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="@dimen/activity_margin_half"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="5sp"
                        android:text="@string/activity_device_introduce_flowtime"
                        android:textColor="?attr/common_white_color"
                        android:textSize="24sp"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="4dp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="10sp"
                        android:text="@string/activity_device_introduce_biosensing_meditation_headband"
                        android:textColor="?attr/common_white_color"
                        android:textSize="14sp"
                        />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:orientation="horizontal"
                        >

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/vector_drawable_good"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="8sp"
                            android:text="@string/activity_device_introduce_8"
                            android:textColor="?attr/common_white_color"
                            android:textSize="16sp"
                            />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:orientation="horizontal"
                        >

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/vector_drawable_good"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="8sp"
                            android:text="@string/activity_device_introduce_9"
                            android:textColor="?attr/common_white_color"
                            android:textSize="16sp"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/margin_vertical"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:orientation="horizontal"
                        >

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/vector_drawable_good"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="8sp"
                            android:text="@string/activity_device_introduce_10"
                            android:textColor="?attr/common_white_color"
                            android:textSize="16sp"
                            />
                </LinearLayout>

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:background="@drawable/shape_to_subscription_btn_bg"
                        android:onClick="connectDevice"
                        android:text="@string/activity_device_introduce_connect_device"
                        android:textAllCaps="false"
                        android:textColor="?common_white_color"
                        android:textSize="16sp"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_marginBottom="@dimen/margin_vertical"
                        android:clickable="true"
                        android:onClick="onKnowMore"
                        android:gravity="center_horizontal"
                        android:text="@string/activity_device_introduce_know_more"
                        android:textColor="?attr/common_white_color"
                        android:textSize="16sp"
                        />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>