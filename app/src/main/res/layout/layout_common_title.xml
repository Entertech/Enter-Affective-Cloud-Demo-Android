<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_bg"
    android:layout_width="match_parent"
    android:layout_height="56dp">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/activity_margin"
            android:clickable="true"
            android:src="@drawable/vector_drawable_back_black" />

        <TextView
            android:id="@+id/tv_back"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="返回"
            android:textColor="#4b5dcc"
            android:textSize="17sp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="title"
        android:visibility="gone"
        android:textColor="#232323"
        android:textSize="18sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_margin"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_menu_ic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_close_blue" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:clickable="true"
            android:letterSpacing="0.01"
            android:text="Edit"
            android:textColor="#4b5dcc"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
