<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_experiment_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_16"
        android:layout_marginVertical="@dimen/dim_margin_12"
        android:textColor="@color/light_text_lv1"
        style="@style/text_body_regular"
        android:text="实验1"/>
    <ImageView
        android:id="@+id/iv_icon_to_labels"
        android:layout_marginRight="@dimen/activity_margin_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/vector_drawable_info_blue"/>
    <ImageView
        android:id="@+id/iv_icon_is_selected"
        android:visibility="gone"
        android:layout_marginRight="@dimen/activity_margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/iv_icon_to_labels"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/vector_drawable_check"
        />
</androidx.constraintlayout.widget.ConstraintLayout>