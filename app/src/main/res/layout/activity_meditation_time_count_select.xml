<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MeditationTimeCountSelectActivity"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />


    <RelativeLayout
        android:id="@+id/rl_time_count_eeg"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/iv_icon_eeg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin"
            android:src="@mipmap/ic_check_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_eeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_toRightOf="@+id/iv_icon_eeg"
            android:text="EEG"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_count_hr"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/iv_icon_hr"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin"
            android:src="@mipmap/ic_check_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_toRightOf="@+id/iv_icon_hr"
            android:text="HR"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>
</LinearLayout>