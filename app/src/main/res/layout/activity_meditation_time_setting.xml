<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MeditationTimeSettingActivity"
        android:background="?attr/common_bg1_color"
        android:id="@+id/rl_bg"
        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <include layout="@layout/layout_common_title"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="?attr/common_red4_color"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/activity_meditation_time_setting_meditation_stop_time"
                    />

            <View
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLine"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/rv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_custom_time"
                    android:clickable="true"
                    android:background="@drawable/touch_ripple"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/activity_margin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    >

                <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="?attr/common_text_lv1_base_color"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/activity_meditation_time_setting_custom"
                        />

                <TextView
                        android:id="@+id/tv_custom_time"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/common_text_lv2_base_color"
                        android:lineSpacingExtra="6sp"
                        android:gravity="end"
                        android:text="@string/activity_meditation_time_setting_15_min"
                        />

                <ImageView
                        android:id="@+id/iv_custom_check"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_check_blue"
                        />

                <View
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLine"
                        />


            </RelativeLayout>

            <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="?attr/common_red4_color"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/activity_meditation_time_setting_end_sound"
                    />

            <View
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLine"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_end_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="?attr/common_text_lv2_base_color"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/activity_meditation_time_setting_12"
                    />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>