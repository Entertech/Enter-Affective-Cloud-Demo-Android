<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="?common_bg1_color">

    <include layout="@layout/layout_common_title"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <RelativeLayout
                android:background="?attr/common_green5_color"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="@dimen/activity_margin_half"
                android:layout_marginRight="@dimen/activity_margin_half"
                >

            <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitStart"
                    android:layout_width="276dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:src="@mipmap/pic_flowtime_introduce"/>
        </RelativeLayout>

        <TextView
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="?attr/common_text_lv1_base_color"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="@string/activity_device_turn_on_1"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
                android:layout_marginBottom="56dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:background="@drawable/shape_to_subscription_btn_bg"
                android:textAllCaps="false"
                android:textColor="?attr/common_white_color"
                android:textSize="16sp"
                android:text="@string/activity_device_turn_on_next"
                android:onClick="toDeviceConnect"/>
    </LinearLayout>
</LinearLayout>