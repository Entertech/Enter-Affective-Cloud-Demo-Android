<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragment.JourneyFragment"
             android:background="?attr/common_bg1_color"
        >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <cn.entertech.flowtimezh.ui.view.GuideTipView
                    android:id="@+id/gtv_journey"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    app:gtv_type="4"
                    app:gtv_tipText="You can find all your meditaion journey here. The 'Biodata' tag means you have used Flowtime headband during that meditation. Tap the card to see details."
                    >

            </cn.entertech.flowtimezh.ui.view.GuideTipView>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_journey_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>