            app:cb_btnEnable="true"
            android:layout_marginTop="@dimen/activity_margin_24"
            android:layout_marginLeft="@dimen/activity_margin_16"
            android:layout_marginRight="@dimen/activity_margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cb_btnTextColor="@color/white"
            app:cb_btnFillColor="@color/colorBlack"
            app:cb_btnText="Log out"/>
