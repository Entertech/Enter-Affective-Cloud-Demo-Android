    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <TextView
            style="@style/text_bigtitle_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="39dp"
            android:text="@string/me"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_16"
            android:layout_marginTop="32dp"
            android:text="@string/setting" />


        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:layout_marginTop="@dimen/activity_margin_8"
            android:id="@+id/me_experiment_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cti_text="Change experiment"
            app:cti_arrowIcon="@mipmap/ic_arrow_gray_right"
            app:cti_textColor="@color/colorBlack" />

        <RelativeLayout
            android:id="@+id/me_save_data"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff">

            <TextView
                style="@style/text_body_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Save raw &amp; report data"
                android:textColor="#000" />

            <Switch
                android:id="@+id/switch_save_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin_16" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_file_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_16"
            android:text="Raw data &amp; report data saved in your package folder:
data/dddd/dddd" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_16"
            android:layout_marginTop="@dimen/activity_margin_24"
            android:text="Manager Device" />
        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:layout_marginTop="@dimen/activity_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/me_device_select"
            app:cti_text="Change device"
            app:cti_arrowIcon="@mipmap/ic_arrow_gray_right"
            app:cti_textColor="@color/colorBlack"/>
        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:id="@+id/me_disconnect_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cti_text="Disconnect device"
            app:cti_textColor="@color/colorThemeBlue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_16"
            android:layout_marginTop="@dimen/activity_margin_24"
            android:text="Support" />

        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:layout_marginTop="@dimen/activity_margin_8"
            android:id="@+id/me_app_use"
            app:cti_arrowIcon="@mipmap/ic_arrow_gray_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cti_text="How to use the app"
            app:cti_textColor="@color/colorBlack"/>

        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:id="@+id/me_know_more_devices"
            app:cti_arrowIcon="@mipmap/ic_arrow_gray_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cti_text="Know about Flowtime devices "
            app:cti_textColor="@color/colorBlack"/>

        <cn.entertech.flowtimezh.ui.view.CommonTextItem
            android:id="@+id/me_help_center"
            app:cti_arrowIcon="@mipmap/ic_arrow_gray_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cti_text="Get support"
            app:cti_textColor="@color/colorBlack"/>

        <cn.entertech.flowtimezh.ui.view.CommonButton
