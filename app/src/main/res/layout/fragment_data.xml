<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.MeditationFragment">

    <cn.entertech.flowtimezh.ui.view.SmartScrollView
        android:id="@+id/ssv_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_minibar_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_half">

                <TextView
                    android:id="@+id/tv_minibar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Connect the headband to show data"
                    android:textColor="#7f725e"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_minibar_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:text="基础数据"
                    android:textColor="#232323"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    android:visibility="gone"
                    android:letterSpacing="0.01"
                    android:text="Edit"
                    android:textColor="#4b5dcc"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <cn.entertech.flowtimezh.ui.view.MeditationInterruptView
                android:id="@+id/miv_interrupt_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:visibility="gone">

            </cn.entertech.flowtimezh.ui.view.MeditationInterruptView>


            <cn.entertech.flowtimezh.ui.view.MeditationInterruptView
                android:id="@+id/miv_interrupt_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:visibility="gone">

            </cn.entertech.flowtimezh.ui.view.MeditationInterruptView>


            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </cn.entertech.flowtimezh.ui.view.SmartScrollView>

</LinearLayout>