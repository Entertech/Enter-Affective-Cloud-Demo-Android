<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_popwindow_bg">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_load_loading"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_loading_spinner"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_load_failed_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/vector_drawable_loading_icon_warning"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_load_success_icon"
            android:layout_width="54dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/vector_drawable_loading_icon_done"
            android:visibility="gone" />

        <TextView
            style="@style/text_body_regular"
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_margin_8"
            android:layout_marginTop="@dimen/activity_margin_8"
            android:layout_marginRight="@dimen/activity_margin_8"
            android:gravity="center"
            android:text="loading..."
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>
