<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.fragment.MeditationFragment"
              android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/fragment_data_real_time_biodata"
                    android:textColor="?attr/common_text_lv1_base_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            <TextView
                    android:id="@+id/tv_edit_done"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="?attr/common_blue_primary_color"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:clickable="true"
                    android:text="@string/fragment_data_edit_done"
                    />
        </RelativeLayout>

        <TextView
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="?attr/common_text_lv1_base_color"
                android:lineSpacingExtra="7sp"
                android:text="@string/fragment_data_edit_19"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_data_edit_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>